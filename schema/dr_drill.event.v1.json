{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "dr_drill.event.v1",
  "type": "object",
  "required": ["step", "started_at", "ended_at", "status", "notes"],
  "properties": {
    "step": {
      "type": "string",
      "minLength": 1
    },
    "started_at": {
      "type": "string",
      "format": "date-time"
    },
    "ended_at": {
      "type": "string",
      "format": "date-time"
    },
    "status": {
      "type": "string",
      "enum": ["success", "failure"]
    },
    "notes": {
      "type": "string"
    }
  },
  "additionalProperties": true
}
